            android:name=".vaso"
            android:exported="false" />
        <activity
            android:name=".reflexiones"
            android:exported="false" />
        <activity
            android:name=".videos"
            android:exported="false" />
        <activity
            android:name=".biblioteca"
            android:exported="false" />
        <activity
            android:name=".bienvenida"
            android:exported="false" />


        <activity android:name=".ActivityRegistro" /> <!-- Pantalla principal -->
