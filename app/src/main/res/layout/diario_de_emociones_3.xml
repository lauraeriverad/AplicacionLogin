<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/musica"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="78dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:contentDescription="Volver"
        android:src="@drawable/ic_back" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:hint="mm/dd/yyyy"
        android:inputType="date"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/botonesVerticales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/backButton"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/btnCamara"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_camera"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/btnMicrofono"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_micro"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/btnEmoji"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_emoji"
            android:background="@null"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="318dp"
        android:layout_height="516dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-36dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@id/botonesVerticales"
        android:hint="Escribe tus pensamientos y reflexiones..."
        android:padding="16dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Guardar"
        android:textColor="#000"
        android:fontFamily="@font/old_italic"
        android:shadowColor="#000"
        android:shadowRadius="5"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#CBD8E0"/>
</RelativeLayout>
